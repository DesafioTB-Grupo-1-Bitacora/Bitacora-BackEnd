{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "The AWS CloudFormation template for this Serverless application",
  "Resources": {
    "EntrypointLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": "/aws/lambda/bitacora-service-dev-entrypoint"
      }
    },
    "IamRoleLambdaExecution": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": {
              "Fn::Join": [
                "-",
                [
                  "bitacora-service",
                  "dev",
                  "lambda"
                ]
              ]
            },
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogStream",
                    "logs:CreateLogGroup",
                    "logs:TagResource"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/bitacora-service-dev*:*"
                    }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:PutLogEvents"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/bitacora-service-dev*:*:*"
                    }
                  ]
                }
              ]
            }
          }
        ],
        "Path": "/",
        "RoleName": {
          "Fn::Join": [
            "-",
            [
              "bitacora-service",
              "dev",
              {
                "Ref": "AWS::Region"
              },
              "lambdaRole"
            ]
          ]
        }
      }
    },
    "EntrypointLambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": "serverless-pipeline-code-thebridge",
          "S3Key": "serverless/bitacora-service/dev/1693862425012-2023-09-04T21:20:25.012Z/bitacora-service.zip"
        },
        "Handler": "src/index.handler",
        "Runtime": "nodejs18.x",
        "FunctionName": "bitacora-service-dev-entrypoint",
        "MemorySize": 1024,
        "Timeout": 60,
        "Architectures": [
          "arm64"
        ],
        "Tags": [
          {
            "Key": "app",
            "Value": "platform"
          },
          {
            "Key": "env",
            "Value": "dev"
          },
          {
            "Key": "LUMIGO_TAG",
            "Value": "dev"
          }
        ],
        "Environment": {
          "Variables": {
            "ENVIRONMENT": "dev",
            "DB_NAME": "db_bitacora_dev",
            "DB_HOST": "database-1.cqjpydkuzasu.us-west-2.rds.amazonaws.com",
            "DB_PORT": "5432",
            "AWS_NODEJS_CONNECTION_REUSE_ENABLED": "1",
            "NO_COLOR": "true"
          }
        },
        "Role": {
          "Fn::GetAtt": [
            "IamRoleLambdaExecution",
            "Arn"
          ]
        }
      },
      "DependsOn": [
        "EntrypointLogGroup"
      ]
    }
  },
  "Outputs": {
    "ServerlessDeploymentBucketName": {
      "Value": "serverless-pipeline-code-thebridge",
      "Export": {
        "Name": "sls-bitacora-service-dev-ServerlessDeploymentBucketName"
      }
    }
  }
}